{
    "name": "Afterburner Dev Container",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-vscode.cmake-tools"
            ],
            "settings": {
                "editor.formatOnSave": true
            }
        }
    },
    "postCreateCommand": "pip3 install -r /workspace/Afterburner/requirements.txt",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.8"
        }
    },
    "remoteUser": "vscode"
}